<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="710dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="16dp">

        <Button
            android:id="@+id/ajoutPlante"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:backgroundTint="@color/darkgreen"
            android:onClick="pageAjoutPlante"
            android:text="Ajouter Plante" />

        <Button
            android:id="@+id/affichagePlante"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:backgroundTint="@color/darkgreen"
            android:onClick="afficherPlantes"
            android:text="Afficher Plantes" />

        <Button
            android:id="@+id/affichageArrosage"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:backgroundTint="@color/darkgreen"
            android:onClick="pageArrosagePlante"
            android:text="Arrosage Plante" />

        <Button
            android:id="@+id/parametres"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:backgroundTint="@color/darkgreen"
            android:onClick="pageParametres"
            android:text="Parametres" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>