<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".EditPlanteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="134dp"
                android:layout_height="wrap_content"

                android:text="Nom Plante :" />

            <EditText
                android:id="@+id/nom"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom Latin :" />

            <EditText
                android:id="@+id/nomLatin"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewFreq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frequence (au max 3) :" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="17dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:text="Date debut" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:text="Date fin" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="114dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/dateDebut1"
                        android:layout_width="114dp"
                        android:layout_height="40dp"
                        android:layout_weight="0"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textSize="10sp"
                        android:onClick="chosirDateDebut" />

                    <EditText
                        android:id="@+id/dateFin1"
                        android:layout_width="114dp"
                        android:layout_height="35dp"
                        android:layout_weight="0"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textSize="10sp"
                        android:onClick="chosirDateFin" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="103dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:text="Frequence par semaine :" />

                    <Spinner
                        android:id="@+id/frequence1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Name" />
                </LinearLayout>

                <Button
                    android:id="@+id/supprimer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/darkgreen"
                    android:onClick="supprimerValeur1"
                    android:text="Supp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:text="Date debut" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:text="Date fin" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="114dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/dateDebut2"
                        android:layout_width="114dp"
                        android:layout_height="40dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textSize="10sp"
                        android:onClick="chosirDateDebut2"
                        android:layout_weight="0" />

                    <EditText
                        android:id="@+id/dateFin2"
                        android:layout_width="114dp"
                        android:layout_height="35dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textSize="10sp"
                        android:onClick="chosirDateFin2"
                        android:layout_weight="0" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="103dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:text="Frequence par semaine :" />

                    <Spinner
                        android:id="@+id/frequence2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Name" />
                </LinearLayout>

                <Button
                    android:id="@+id/supprimer2"
                    android:layout_width="78dp"
                    android:layout_height="43dp"
                    android:backgroundTint="@color/darkgreen"
                    android:onClick="supprimerValeur2"
                    android:text="Supp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:text="Date debut" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:text="Date fin" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="114dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/dateDebut3"
                        android:layout_width="114dp"
                        android:layout_height="40dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textSize="10sp"
                        android:onClick="chosirDateDebut3"
                        android:layout_weight="0" />

                    <EditText
                        android:id="@+id/dateFin3"
                        android:layout_width="114dp"
                        android:layout_height="35dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textSize="10sp"
                        android:onClick="chosirDateFin3"
                        android:layout_weight="0" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="103dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:text="Frequence par semaine :" />

                    <Spinner
                        android:id="@+id/frequence3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Name" />
                </LinearLayout>

                <Button
                    android:id="@+id/supprimer3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/darkgreen"
                    android:onClick="supprimerValeur3"
                    android:text="Supp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagePlante"
                android:layout_width="76dp"
                android:layout_height="114dp"
                android:layout_gravity="center"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/choisirImage"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/darkgreen"
                    android:text="Ajouter Image" />

                <Button
                    android:id="@+id/ajoutPlante"
                    android:layout_width="116dp"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/darkgreen"
                    android:onClick="updatePlante"
                    android:text="Ajouter Plante" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>